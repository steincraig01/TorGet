
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_searchdialog"
    android:theme="@style/Theme.AppCompat.Light"
    android:elevation="3dp"
    android:id="@+id/SearchView">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/whitesearch64"
        android:background="@drawable/circle_shape"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:text="Torrent Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvsearchheader"
        android:textColor="@android:color/black"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/texteditrect"
        android:id="@+id/edtsearch"
        android:hint="Enter search query..."
        android:inputType="text"
        android:singleLine="true"
        android:minHeight="30dp"
        android:padding="10dp"/>


    <TextView
        android:text="Category"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/textView1" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/texteditrect"
        android:id="@+id/spinner_category" />
    <Button
        android:text="Search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:height="20dp"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonrect"
        android:textColor="@android:color/white"
        android:id="@+id/btnsearch"/>


</LinearLayout>