
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout1"
    android:background="@drawable/shape_listitem"
    android:elevation="3dp"
    android:clipToPadding="false"
    android:padding="7dp">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <ImageView
            android:id="@+id/torrenticon"
            android:src="@drawable/ic_magnet32_solid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/tvtorname"
            android:text="Rick.and.Morty.S04E07.720p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#007ACC"
            android:layout_margin="5dp"
            android:textSize="14dip"
            android:textStyle="bold"/>
    </LinearLayout>
    <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:id="@+id/TableLayout1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvtoruploaded"
                android:text="Uploaded 01-02 03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="@android:color/black"
                android:foregroundGravity="left"
                android:gravity="left"/>
            <TextView
                android:id="@+id/tvtoruled"
                android:text="By Sotnikam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:paddingLeft="10dp"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tvtorseeds"
                android:text="Seeds: 1233"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="@android:color/black"
                android:foregroundGravity="left"
                android:gravity="left"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvtorcategory"
                android:text="Video (HD - Movies)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="@android:color/black"
                android:foregroundGravity="left"
                android:gravity="left"/>
            <TextView
                android:id="@+id/tvtorsize"
                android:text="1.49 GiB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="@android:color/black"
                android:paddingLeft="10dip"
                android:foregroundGravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvtorleech"
                android:text="Leech: 44369"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="@android:color/black"
                android:foregroundGravity="left"
                android:gravity="left"/>
        </TableRow>
    </TableLayout>
</LinearLayout>