<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tordetdiag_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="3dp"
    android:padding="8dp"
    android:background="@drawable/shape_listitem">
    <RelativeLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_magnet48_trusted_blue_border" />
        <TextView
            android:id="@+id/tvtorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            android:text="Avengers Infinity War 2019 Bluray Rip RTG 1080p english 2020"
            android:textColor="#007ACC"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:id="@+id/tvtortrusted"
            android:text="{md_help 18dp} Unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtorname"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:id="@+id/tvtorcategory"
            android:text="Video (HD - TV Shows)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtorname"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:id="@+id/tvtorsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtorname"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:text="125.5MiB"
            android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/subheaderlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{md_today 18dp #007ACC} Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:id="@+id/textView3" />
        <TextView
            android:id="@+id/tvtoruploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:text="02-03 20"
            android:textStyle="bold"
            android:textSize="14dp"/>
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{md_person 18dp #007ACC} Uploader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            
            android:textStyle="bold"
            android:id="@+id/textView4" />
        <TextView
            android:id="@+id/tvtoruled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:text="Sotnikam"
            android:textStyle="bold"
            android:textSize="14dp" />

        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{md_file_upload 18dp #007ACC} Seeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tvtorseeds"
            android:textStyle="bold"
            android:id="@+id/textView5" />
        <TextView
            android:id="@+id/tvtorseeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:text="2034"
            android:textStyle="bold"
            android:textSize="14dp" />
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{md_file_download 18dp #007ACC} Leech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/tvtorseeds"
            android:textStyle="bold"
            android:id="@+id/textView6" />
        <TextView
            android:id="@+id/tvtorleech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView6"
            android:layout_below="@+id/tvtorseeds"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:text="10"
            android:textStyle="bold"
            android:textSize="14dp"/>








    </RelativeLayout>
</LinearLayout>
