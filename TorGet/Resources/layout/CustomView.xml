<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tordetdiag_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="3dp"
    android:padding="8dp"
    android:background="@drawable/shape_listitem">
    <RelativeLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            
            app:srcCompat="@drawable/ic_magnet48_trusted_blue_border" />
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:id="@+id/tvtortrusted"
            android:text="?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-16dp"
            android:layout_below="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvtorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            android:text="Avengers Infinity War 2019 Bluray Rip RTG 1080p english 2020"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:id="@+id/tvtorcategory"
            android:text="Video (HD - TV Shows)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtorname"
            
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:id="@+id/tvtorsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:text="125.5MiB"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{md_today 18dp #007ACC}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:id="@+id/tvtoruploaded" />
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{md_person 18dp #007ACC} Uploader "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:id="@+id/textView4" />
        <TextView
            android:id="@+id/tvtoruled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerInParent="true"
            android:text="Sotnikam"
            android:textStyle="bold" />
        
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{fa_arrow_up #007ACC} "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tvtorleech"
            android:textStyle="bold"
            android:id="@+id/tvtorseeds" />
        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:text="{fa_arrow_down #007ACC} "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            
            android:textStyle="bold"
            android:id="@+id/tvtorleech" />

    </RelativeLayout>
    
    
</LinearLayout>

