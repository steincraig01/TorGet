<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tordetdiag_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    android:orientation="vertical"
    android:elevation="3dp">
  
    <LinearLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:elevation="4dp"
        android:background="@color/colorBGDarkAccent"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tvtorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Avengers Infinity War 2019 Bluray Rip RTG 1080p english 2020"
            android:textColor="@color/colorTextWhite"
            android:textSize="22dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/download"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="?android:attr/textColor"
            android:text="{md_cloud_download 24dp}   Download Torrent"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/copymagnet"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="?android:attr/textColor"
            android:text="{md_content_paste 24dp}    Copy to Clipboard"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sharemagnet"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="?android:attr/textColor"
            android:text="{md_share 24dp}    Share Magnet Link"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/openinbrowser"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="?android:attr/textColor"
            android:text="{md_open_in_browser 24dp}    Open in Browser"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bookmark"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <JoanZapata.XamarinIconify.Widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="?android:attr/textColor"
            android:text="{md_open_in_browser 24dp}    Add to Bookmarks"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>
    
