
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical"
   android:id="@+id/linearLayout1"
   android:background="@drawable/shape_listitem"

   android:padding="10dp">
   <TextView
        android:id="@+id/tvtorname"
        android:text="Rick.and.Morty.S04E07.720p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#007ACC"
        android:textSize="16dip"
        android:textStyle="bold"/>
    <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:id="@+id/TableLayout1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvtoruploaded"
                android:text="Uploaded 01-02 03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
                android:foregroundGravity="left"
                android:gravity="left"/>
            <TextView
                android:id="@+id/tvtoruled"
                android:text="By Sotnikam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:paddingLeft="10dip"
                android:gravity="center"
                android:foregroundGravity="center"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tvtorseeds"
                android:text="Seeds: 1233"    
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
                android:foregroundGravity="left"
                android:gravity="left"/>
            <ImageView
                android:src="@drawable/blank16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="VIP"
                android:paddingLeft="10dip"
                android:id="@+id/imgstatus"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvtorcategory"
                android:text="Video (HD - Movies)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
                android:foregroundGravity="left"
                android:gravity="left"/>
            <TextView
                android:id="@+id/tvtorsize"
                android:text="1.49 GiB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
                android:paddingLeft="10dip"
                android:foregroundGravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvtorleech"
                android:text="Leech: 44369"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
                android:foregroundGravity="left"
                android:gravity="left"/>
            <ImageView
                android:src="@drawable/blank16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingTop="5dip"
                android:id="@+id/imgcomments"/>
        </TableRow>
    </TableLayout>
</LinearLayout>